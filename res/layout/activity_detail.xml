<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_activity_detail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#03a9f4"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="城市名"
            android:textColor="@color/color_aqi_text_1"
            android:textSize="@dimen/activity_textsize_medium" />

        <TextView
            android:id="@+id/tv_time_point"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="2016-01-01"
            android:textColor="@color/color_aqi_text_1"
            android:textSize="@dimen/activity_textsize_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_aqi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="125"
            android:textColor="@color/color_aqi_text_1"
            android:textSize="@dimen/activity_textsize_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_quality"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="中度污染"
            android:textColor="@color/color_aqi_text_1"
            android:textSize="@dimen/activity_textsize_small" />

        <TextView
            android:id="@+id/tv_primary_pollutant"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="主要污染物"
            android:textColor="@color/color_aqi_text_1"
            android:textSize="@dimen/activity_textsize_small" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1" >

            <Button
                android:id="@+id/bt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bt_selector"
                android:gravity="center_horizontal" />

    </RelativeLayout>

</LinearLayout>